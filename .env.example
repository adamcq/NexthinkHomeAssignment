# Database
DATABASE_URL="postgresql://admin:password@localhost:5432/newsfeed?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Google Gemini API (get your key from https://aistudio.google.com/apikey)
GEMINI_API_KEY="your_gemini_api_key_here"

# Reddit API - Optional User Agent (public API, no credentials needed)
REDDIT_USER_AGENT="IT-Newsfeed-Bot/1.0"

# Node Environment
NODE_ENV="development"

# Server
PORT=3000
API_BASE_URL="http://localhost:3000"

# News Fetching (in minutes)
FETCH_INTERVAL_MINUTES=3
ARTICLES_RETENTION_DAYS=30
